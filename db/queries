
CREATE TABLE customers (
  id SERIAL PRIMARY KEY,
  customer_id uuid UNIQUE,
  name VARCHAR(255) UNIQUE NOT NULL,
  active BOOLEAN,
  location VARCHAR(5) NOT NULL,
  destination VARCHAR(5) NOT NULL,
  driver_id uuid UNIQUE
);

CREATE TABLE drivers (
  id SERIAL PRIMARY KEY,
  driver_id uuid UNIQUE,
  location VARCHAR(5) NOT NULL,
  path TEXT,
  path_index INTEGER,
  customer_id uuid UNIQUE
);
